    "type": "git",
    "url": "https://github.com/restorecommerce/indexing-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "indexing",
    "elasticsearch"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.1.6",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "^0.0.7",
    "@restorecommerce/kafka-client": "^0.1.12",
    "@restorecommerce/logger": "^0.3.5",
    "@restorecommerce/protos": "0.0.12",
    "@restorecommerce/service-config": "^0.3.1",
    "async": "^3.1.0",
    "bodybuilder": "^2.2.21",
    "@elastic/elasticsearch": "^7.7.1",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.15",
    "long": "^4.0.0",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@types/async": "^2.4.1",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.12",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "node lib/start.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "pretest": "eslint src/*.ts && npm run tsctests",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6",
    "test": "npm run pretest && npm run mocha",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "test-debug": "mocha ./test/*.js --inspect-brk --exit",
    "build:tsc": "tsc -d",
    "build:clean": "rimraf lib",
    "build": "npm-run-all lint build:clean build:tsc"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
