    "@restorecommerce/chassis-srv": "^1.2.5",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/grpc-client": "^2.0.2",
    "@restorecommerce/kafka-client": "^1.0.16",
    "@restorecommerce/logger": "^1.2.4",
    "@restorecommerce/protos": "^5.0.0",
    "@restorecommerce/service-config": "^1.0.6",
    "async": "^3.1.0",
    "bodybuilder": "^2.5.1",
    "jsonfile": "^6.1.0",
    "kafka-node": "^5.0.0",
    "lodash": "^4.17.21",
    "redis": "^4.6.7",
    "traverse": "^0.6.7"
  },
  "devDependencies": {
    "@types/async": "^3.2.20",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-prefer-arrow-functions": "^3.1.4",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf lib",
    "build:tsc": "tsc -d",
    "lcov-report": "nyc report --reporter=lcov",
    "coveralls": "cross-env NODE_ENV=test; nyc --reporter text --reporter lcov npm test",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha --full-trace --exit --timeout 30000",
    "start": " node lib/start.js",
    "test": "nyc npm run mocha",
    "test-debug": "npm run mocha -- --inspect-brk"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}
