{
  "name": "indexing-srv",
  "version": "0.0.12",
  "description": "Restore Commerce Elasticsearch indexing microservice",
  "main": "./lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/indexing-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "indexing",
    "elasticsearch"
  ],
  "dependencies": {
    "@elastic/elasticsearch": "^7.9.1",
    "@restorecommerce/chassis-srv": "^0.1.6",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/grpc-client": "^0.0.7",
    "@restorecommerce/kafka-client": "^0.1.12",
    "@restorecommerce/logger": "^0.3.5",
    "@restorecommerce/protos": "0.0.12",
    "@restorecommerce/service-config": "^0.3.1",
    "async": "^3.1.0",
    "bodybuilder": "^2.2.21",
    "jsonfile": "^6.0.1",
    "lodash": "^4.17.20",
    "long": "^4.0.0",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/lodash": "^4.14.162",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf lib",
    "build:tsc": "tsc -d",
    "coveralls": "cross-env NODE_ENV=test; nyc --reporter text --reporter lcov npm test",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/start.ts",
    "lint": "eslint src --ext .ts",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "pretest": "eslint src/*.ts && npm run tsctests && npm run createtopics",
    "start": "node lib/start.js",
    "test": "npm run mocha",
    "test-debug": "mocha ./test/*.js --inspect-brk --exit",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 12.18.3"
  }
}
